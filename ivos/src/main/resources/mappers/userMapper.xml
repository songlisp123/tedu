<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ivos.demo.user.mapper.userMapper">
    <select id="selectUserByUserNameAndPassword" resultType="com.ivos.demo.user.pojo.vo.UserVo">
        SELECT id,username,password,email,phone,age,gender,create_time,update_time,status,level,parent_id
        FROM user WHERE username=#{username}
    </select>

    <select id="findUsers" resultType="com.ivos.demo.user.pojo.entity.User">
        SELECT id,username,password,email,phone,age,gender,create_time,update_time,status,level,parent_id
        FROM user

    </select>

    <select id="findAllUsers" resultType="com.ivos.demo.user.pojo.vo.UserVo">
        SELECT id,username,password,email,phone,age,gender,create_time,update_time,status,level,parent_id
        FROM user
        <where>
            <if test="id != null">
                AND id = #{id}
            </if>
            <if test="username != null and username != '' ">
                AND username like CONCAT('%',#{username},'%')
            </if>
            <if test="status != null and status != '' ">
                AND status = #{status}
            </if>
            <if test="level != null and level != '' ">
                AND level = #{level}
            </if>
        </where>
    </select>

    <insert id="regUser">
        INSERT INTO user(
        username,
        password,
        email,
        phone,
        age,
        gender,
        create_time,
        update_time,
        status,
        level,
        parent_id)
        VALUES (
        #{username},
        #{password},
        #{email},
        #{phone},
        #{age},
        #{gender},
        #{createTime},
        #{updateTime},
        #{status},
        #{level},
        #{parentId}
        )
    </insert>

    <update id="updateUser">
        UPDATE user
        <set>
            <if test="password != null and password != '' ">
                password=#{password},
            </if>
            <if test="email != null and email != ''">
                email = #{email},
            </if>
            <if test="phone != null and phone != ''">
                phone = #{phone},
            </if>
            <if test="age != null">
                age = #{age},
            </if>
            <if test="gender != null and gender != ''">
                gender = #{gender},
            </if>
            <if test="status != null and status != ''">
                email = #{email},
            </if>
            <if test="level != null and level != ''">
                level = #{level},
            </if>
            <if test="parentId != null">
                parent_id = #{parentId},
            </if>
            <if test="updateTime != null">
                update_time = #{updateTime},
            </if>
            <if test="status != null and status != '' ">
                status = #{status}
            </if>
        </set>
        WHERE id=#{id}
    </update>

    <delete id="delete">
        DELETE FROM user
        WHERE id=#{userId}
    </delete>

    <select id="selectById" resultType="com.ivos.demo.user.pojo.vo.UserVo">
        SELECT id,username,password,email,phone,age,gender,create_time,update_time,status,level,parent_id
        FROM user WHERE id=#{parentId}
    </select>

</mapper>