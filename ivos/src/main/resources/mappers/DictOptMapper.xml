<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ivos.demo.dicOptions.mapper.DictOptMapper">
    <select id="query" resultType="com.ivos.demo.dicOptions.pojo.vo.DicOptVo">
        SELECT id,label,value,sort,remark,create_time
        FROM dict_option
        <where>
            <if test="dictId != null">
               AND dict_id = #{dictId}
            </if>
            <if test="label != null and label != '' ">
                AND label like CONCAT('%',#{label},'%')
            </if>
        </where>
    </select>

</mapper>