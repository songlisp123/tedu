<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com._02vue.demo.user.mapper.userMapper">
    <select id="login" resultType="com._02vue.demo.user.pojo.entity.User">
        SELECT id,username,password,email
        FROM users
        WHERE (username=#{loginPara} OR email=#{loginPara})
        AND password=#{password}
    </select>
</mapper>
